<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginVertical="10dp"
        android:background="@color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:orientation="horizontal">

                <pl.droidsonroids.gif.GifImageView

                    android:id="@+id/recycle_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/loader" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/recycle_name"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_marginTop="0dp"
                    android:text="K.A.Perera"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/recycle_contact_no"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_marginVertical="5dp"
                    android:text="0713456742"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/recycle_address"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:text="53/2, Temple Road, Galle"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/recycle_blood_group"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_marginVertical="0dp"
                    android:text="A+"
                    android:textColor="@color/black"/>


            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>