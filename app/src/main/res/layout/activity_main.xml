<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/home_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/info_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="Welcome"
            android:textColor="@color/black"
            android:textFontWeight="200"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/sign_in_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info_welcome"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Sign in to continue"
            android:textColor="@color/black"
            android:textFontWeight="200"
            android:textSize="20dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sign_in_to"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/primary"
            android:paddingHorizontal="60dp"
            android:paddingVertical="20dp"
            android:text="SIGN IN"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:cornerRadius="50dp" />

        <TextView
            android:id="@+id/or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnSign"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Or"
            android:textColor="@color/black"
            android:textFontWeight="200"
            android:textSize="20dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/or"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/primary"
            android:paddingHorizontal="60dp"
            android:paddingVertical="20dp"
            android:text="SIGN UP"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:cornerRadius="50dp" />
    </RelativeLayout>
</ScrollView><!--</androidx.drawerlayout.widget.DrawerLayout>-->